@{
    ViewBag.Title = "Iniciar Sesión | eSaludCare";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@800&display=swap" rel="stylesheet">
    <style>
        /* Nueva Paleta de Colores: Azul y Dorado Moderno */
        :root {
            --color-azul-intenso: #1A374D; /* Azul oscuro elegante (principal) */
            --color-dorado-vibrante: #D4AF37; /* Dorado clásico y brillante (acento principal) */
            --color-azul-claro: #86BBD8; /* Azul más suave para secundarios/detalles */
            --color-fondo-claro-moderno: #EAF2F8; /* <--- ¡VALOR ACTUALIZADO! (Azul pálido sutil) */
            --color-gris-texto: #495057; /* Texto general */
            --color-borde-input: #dee2e6; /* Borde inputs */
        }

        body {
            background-color: var(--color-fondo-claro-moderno); /* Fondo azul pálido */
            font-family: 'Roboto', sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            margin: 0;
            padding: 20px;
        }

        .login-container {
            background-color: white;
            padding: 40px;
            border-radius: 15px;
            box-shadow: 0 15px 40px rgba(0, 0, 0, 0.1); /* Sombra pronunciada */
            max-width: 450px;
            width: 100%;
            text-align: center;
            position: relative;
            overflow: hidden;
        }

        .login-container h2 {
            color: var(--color-azul-intenso); /* Color de fallback para el h2 */
            font-size: 2.5rem;
            font-weight: 700;
            margin-bottom: 30px; /* Ajuste para dar espacio al contenido */
            line-height: 1.2;
        }

        /* ESTILO para eSaludCare dentro del h2 */
        .login-container h2 .brand-name {
            font-family: 'Montserrat', sans-serif;
            font-weight: 800;
            color: var(--color-azul-intenso);
            font-size: 1.1em; /* Tamaño ajustado */
            display: block;
            margin-bottom: 0; /* Cero margen inferior */
            letter-spacing: 0.5px;
            text-shadow: none;
        }

        /* ESTILO ESPECÍFICO para el mensaje de bienvenida */
        .login-container h2 .welcome-message {
            color: var(--color-dorado-vibrante); /* Dorado */
            display: block; /* Para que caiga debajo del brand-name */
            font-size: 0.8em; /* Sutil y más pequeño que la marca */
            font-weight: 500;
            margin-top: 5px;
        }

        /* Estilos de input */
        .login-container .form-control {
            border-radius: 8px;
            padding: 14px 18px;
            margin-bottom: 15px;
            border: 1px solid var(--color-borde-input);
            transition: border-color 0.3s ease, box-shadow 0.3s ease;
            font-size: 1.05rem;
        }

        .login-container .form-control:focus {
            border-color: var(--color-azul-claro);
            box-shadow: 0 0 0 0.25rem rgba(134, 187, 216, 0.4);
            outline: none;
        }

        /* ESTADO NORMAL DEL BOTÓN: AZUL INTENSO */
        .btn-login-main {
            background-color: var(--color-azul-intenso); /* Color inicial Azul Intenso */
            color: white;
            border: none;
            padding: 15px 30px;
            font-size: 1.2rem;
            font-weight: bold;
            border-radius: 10px;
            box-shadow: 0 8px 20px rgba(26, 55, 77, 0.3);
            transition: all 0.3s ease;
            width: 100%;
            margin-top: 25px;
            letter-spacing: 0.8px;
        }

        /* ESTADO HOVER DEL BOTÓN: DORADO VIBRANTE */
        .btn-login-main:hover {
            background-color: var(--color-dorado-vibrante); /* Dorado Vibrante al pasar el cursor */
            color: var(--color-azul-intenso); /* Texto en azul oscuro para contraste en dorado */
            transform: translateY(-2px);
            box-shadow: 0 12px 25px rgba(212, 175, 55, 0.4);
        }

        .form-check {
            text-align: left;
            margin-bottom: 25px;
            color: var(--color-gris-texto);
            font-size: 0.95rem;
        }

        .form-check-input:checked {
            background-color: var(--color-azul-intenso);
            border-color: var(--color-azul-intenso);
        }

        .links-adicionales {
            margin-top: 35px;
            font-size: 1rem;
        }

        .links-adicionales a {
            color: var(--color-azul-intenso);
            text-decoration: none;
            margin: 0 12px;
            transition: color 0.3s ease;
            font-weight: 500;
        }

        .links-adicionales a:hover {
            color: var(--color-dorado-vibrante);
            text-decoration: underline;
        }

        .logo-login {
            max-width: 180px;
            margin-bottom: 30px;
            filter: drop-shadow(0 5px 10px rgba(0,0,0,0.08));
        }

        /* Responsive adjustments */
        media (max-width: 576px) {
            .login-container {
                padding: 30px;
                border-radius: 10px;
                box-shadow: 0 8px 20px rgba(0, 0, 0, 0.08);
            }
            .login-container h2 {
                font-size: 2rem;
                margin-bottom: 20px;
            }
            .login-container h2 .brand-name {
                font-size: 1em;
            }
            .login-container h2 .welcome-message {
                font-size: 0.7em;
            }
            .login-container .form-control {
                padding: 12px 15px;
                margin-bottom: 15px;
            }
            .btn-login-main {
                padding: 12px 25px;
                font-size: 1.1rem;
                margin-top: 20px;
            }
            .links-adicionales {
                margin-top: 25px;
            }
            .links-adicionales a {
                display: block;
                margin: 10px 0;
            }
        }
    </style>
</head>
<body>
    <div class="login-container">
        <img src="~/Imagenes/eSaludCare_Logo.png" alt="Logo eSaludCare" class="logo-login" />

        <h2>
            <span class="brand-name">eSaludCare</span>
            <span class="welcome-message">¡Bienvenido/a de nuevo!</span>
        </h2>

        @* **IMPORTANTE:** Asegúrate de que el formulario tenga el ID "formLogin" para que el script AJAX funcione. *@
        @using (Html.BeginForm("Index", "Login", FormMethod.Post, new { id = "formLogin" }))
        {
            <div class="mb-3">
                <input type="email" class="form-control" name="correo" placeholder="Ingrese su dirección de correo electrónico..." required />
            </div>
            <div class="mb-3">
                <input type="password" class="form-control" name="contrasena" placeholder="Contraseña" required />
            </div>
            <div class="form-check">
                <input type="checkbox" class="form-check-input" id="rememberMe" name="rememberMe" />
                <label class="form-check-label" for="rememberMe">Recuérdame</label>
            </div>
            <button type="submit" class="btn btn-login-main">Iniciar Sesión</button>

            @* Error visual si el login falla *@
            if (ViewBag.Error != null)
            {
                <div class="alert alert-danger mt-3">@ViewBag.Error</div>
            }
        }

        <div class="links-adicionales">
            <a href="#">¿Olvidó su contraseña?</a>
            <a href="@Url.Action("Registro","Login")">¡Crea una cuenta!</a>
        </div>
    </div>

    @* Se asume que esta sección de scripts va al final del body o en un Layout *@
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#formLogin").on("submit", function (e) {
                e.preventDefault();

                const datos = {
                    correo: $("[name='correo']").val(),
                    contrasena: $("[name='contrasena']").val()
                };

                $.ajax({
                    url: "/api/v1/login",
                    type: "POST",
                    data: JSON.stringify(datos),
                    contentType: "application/json; charset=utf-8",
                    success: function (response) {
                        if (response.success) {

                            localStorage.setItem("token", response.token);
                            localStorage.setItem("idUsuario", response.id_usuario);
                            localStorage.setItem("rol", response.role);
                            localStorage.setItem("nombre", response.nombre);

                            alert("Bienvenido, " + response.nombre);

                            // Redirección
                            window.location.href = "/Home/Index";
                        } else {
                            alert("Usuario o contraseña incorrectos.");
                        }
                    },
                    error: function (xhr) {
                        if (xhr.status === 401) {
                            alert("Credenciales incorrectas. Verifica tu correo y contraseña.");
                        } else {
                            alert("Error al iniciar sesión: " + xhr.responseText);
                        }
                    }
                });
            });
        });
    </script>
</body>
</html>