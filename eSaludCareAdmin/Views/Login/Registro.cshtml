@{
    ViewBag.Title = "Registro de Usuario | eSaludCare";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@800&display=swap" rel="stylesheet">
    <style>
        /* Nueva Paleta de Colores: Azul y Dorado Moderno */
        :root {
            --color-azul-intenso: #1A374D; /* Azul oscuro elegante (principal) */
            --color-dorado-vibrante: #D4AF37; /* Dorado clásico y brillante (acento principal) */
            --color-azul-claro: #86BBD8; /* Azul más suave para secundarios/detalles */
            --color-fondo-claro-moderno: #EAF2F8; /* Fondo azul pálido sutil */
            --color-gris-texto: #495057; /* Texto general */
            --color-borde-input: #dee2e6; /* Borde inputs */
        }

        body {
            background-color: var(--color-fondo-claro-moderno); /* Fondo azul pálido */
            font-family: 'Roboto', sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            margin: 0;
            padding: 20px;
        }

        .register-container {
            background-color: white;
            padding: 40px;
            border-radius: 15px;
            box-shadow: 0 15px 40px rgba(0, 0, 0, 0.1); /* Sombra pronunciada */
            max-width: 650px; /* Un poco más amplio para el formulario de registro */
            width: 100%;
        }

            .register-container h2 {
                color: var(--color-azul-intenso);
                font-size: 2.2rem;
                font-weight: 700;
                text-align: center;
                margin-bottom: 30px;
                font-family: 'Montserrat', sans-serif;
            }

        /* Estilos de input */
        .form-control {
            border-radius: 8px;
            padding: 14px 18px;
            margin-bottom: 15px;
            border: 1px solid var(--color-borde-input);
            transition: border-color 0.3s ease, box-shadow 0.3s ease;
            font-size: 1.05rem;
        }

            .form-control:focus {
                border-color: var(--color-azul-claro);
                box-shadow: 0 0 0 0.25rem rgba(134, 187, 216, 0.4);
                outline: none;
            }

        /* Estilo para el SELECT */
        #rolSelect.form-control {
            color: var(--color-gris-texto);
        }

        /* ESTADO NORMAL DEL BOTÓN: AZUL INTENSO */
        .btn-register {
            background-color: var(--color-azul-intenso); /* Color inicial Azul Intenso */
            color: white;
            border: none;
            padding: 15px 30px;
            font-size: 1.2rem;
            font-weight: bold;
            border-radius: 10px;
            box-shadow: 0 8px 20px rgba(26, 55, 77, 0.3);
            transition: all 0.3s ease;
            width: 100%;
            margin-top: 25px !important; /* Asegura el espacio */
            letter-spacing: 0.8px;
        }

            /* ESTADO HOVER DEL BOTÓN: DORADO VIBRANTE */
            .btn-register:hover {
                background-color: var(--color-dorado-vibrante); /* Dorado Vibrante al pasar el cursor */
                color: var(--color-azul-intenso); /* Texto en azul oscuro para contraste en dorado */
                transform: translateY(-2px);
                box-shadow: 0 12px 25px rgba(212, 175, 55, 0.4);
            }

        .links-adicionales {
            text-align: center;
            margin-top: 30px;
        }

            .links-adicionales a {
                color: var(--color-azul-intenso);
                text-decoration: none;
                font-weight: 600;
                transition: color 0.3s ease;
            }

                .links-adicionales a:hover {
                    color: var(--color-dorado-vibrante);
                    text-decoration: underline;
                }
    </style>
</head>
<body>
    <div class="register-container">
        <h2>Registro de Usuario</h2>

        <form id="formRegistro">
            <div class="row">
                <div class="col-md-6">
                    <input type="text" id="nombre" class="form-control" placeholder="Nombre" required />
                </div>
                <div class="col-md-6">
                    <input type="text" id="apellido" class="form-control" placeholder="Apellido" required />
                </div>
            </div>

            <input type="email" id="correo" class="form-control" placeholder="Correo electrónico" required />
            <input type="password" id="contrasena" class="form-control" placeholder="Contraseña" required />
            <input type="text" id="telefono" class="form-control" placeholder="Teléfono (Opcional)" />

            <select id="rolSelect" class="form-control" required>
                <option value="">Seleccione un rol</option>
                <option value="medico">Médico</option>
                <option value="admin">Administrador</option>
            </select>

            <div id="extraFields"></div>

            <button type="submit" class="btn btn-register">Registrar</button>
        </form>

        <div id="mensaje" class="mt-3 text-center"></div>

        <div class="links-adicionales">
            <a href="@Url.Action("Index","Login")">¿Ya tienes una cuenta? Inicia Sesión</a>
        </div>
    </div>

    <script>
        // ... (Tu script JS se mantiene igual ya que maneja la lógica, no el estilo)
        const rolSelect = document.getElementById("rolSelect");
        const extraFields = document.getElementById("extraFields");
        const form = document.getElementById("formRegistro");
        const mensajeDiv = document.getElementById("mensaje");

        rolSelect.addEventListener("change", () => {
            const rol = rolSelect.value;
            extraFields.innerHTML = "";

            if (rol === "medico") {
                extraFields.innerHTML = `
                        <input type="text" id="especialidad" class="form-control" placeholder="Especialidad médica" required />
                        <input type="text" id="numero_cedula" class="form-control" placeholder="Número de cédula profesional" required />
                    `;
            }
        });

        form.addEventListener("submit", async (e) => {
            e.preventDefault(); // Evita el submit tradicional

            const rol = rolSelect.value;
            const data = {
                Nombre: document.getElementById("nombre").value,
                Apellido: document.getElementById("apellido").value,
                Correo: document.getElementById("correo").value,
                Contrasena: document.getElementById("contrasena").value,
                Telefono: document.getElementById("telefono").value,
                Rol: rol,
                FechaRegistro: new Date().toISOString()
            };

            if (rol === "medico") {
                data.Especialidad = document.getElementById("especialidad").value;
                data.NumeroCedula = document.getElementById("numero_cedula").value;
            }

            try {
                const response = await fetch('/api/v1/registroAdmiMedi', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(data)
                });


                const result = await response.json();

                if (response.ok) {
                    alert(result?.mensaje || "Usuario registrado correctamente. ");
                    mensajeDiv.innerHTML = `<div class="alert alert-success">${result.mensaje}</div>`;
                    form.reset();
                    extraFields.innerHTML = "";
                } else {
                    mensajeDiv.innerHTML = `<div class="alert alert-danger">${result.message || result.mensaje}</div>`;
                }
            } catch (error) {
                mensajeDiv.innerHTML = `<div class="alert alert-danger">Error de conexión con la API.</div>`;
            }
        });
    </script>
</body>
</html>