@model IEnumerable<CapaEntidad.PerfilUsuarioDTO>
@using System.Linq

@{
    ViewBag.Title = "Index";
}

<h2>Listado de Perfiles</h2>
<p>Total perfiles recibidos: @Model.Count()</p>

@if (Model != null && Model.Any())
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Correo</th>
                <th>Teléfono</th>
                <th>Rol</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var perfil in Model)
            {
                <tr>
                    <td>@perfil.Nombre</td>
                    <td>@perfil.Correo</td>
                    <td>@perfil.Telefono</td>
                    <td>@perfil.Rol</td>

                    <td>
                        @if (perfil.Id > 0)
                        {
                            <a href="@Url.Action("Detalles", "Perfiles", new { id = perfil.Id })" class="btn btn-sm btn-info">Ver</a>
                        }
                        <a href="@Url.Action("Editar", "Perfiles", new { id = perfil.Id })" class="btn btn-warning">Editar</a>
                        <a href="@Url.Action("Eliminar", "Perfiles", new { id = perfil.Id })" class="btn btn-sm btn-danger" onclick="return confirm('¿Eliminar este perfil?');">Eliminar</a>
                        <a href="@Url.Action("CambiarRol", "Perfiles", new { id = perfil.Id })" class="btn btn-sm btn-secondary">Rol</a>
                        <a href="@Url.Action("ResetPassword", "Perfiles", new { id = perfil.Id })" class="btn btn-sm btn-dark">Reset</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="mt-3">
        <a href="@Url.Action("Crear", "Perfiles")" class="btn btn-success">Agregar Usuario</a>
    </div>
}
else
{
    <div class="alert alert-warning">
        <strong>Atención:</strong> @ViewBag.Error
    </div>
}