@model IEnumerable<CapaEntidad.CitaAgendadaDTO>

@{
    ViewBag.Title = "Consultas Agendadas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center">Consultas Agendadas</h2>

<table class="table table-bordered table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Paciente</th>
            <th>Médico</th>
            <th>Fecha</th>
            <th>Hora</th>
            <th>Estado</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var cita in Model)
            {
                <tr>
                    <td>@cita.IdCita</td>
                    <td>@cita.NombrePaciente</td>
                    <td>@cita.NombreMedico</td>
                    <td>
                        @(cita.Fecha.HasValue
                            ? cita.Fecha.Value.ToString("dd/MM/yyyy")
                            : "<span class=\"text-muted\">Sin fecha</span>")
                    </td>
                    <td>
                        @(cita.Hora.HasValue
                            ? cita.Hora.Value.ToString(@"hh\:mm")
                            : "<span class=\"text-muted\">Sin hora</span>")
                    </td>
                    <td>@cita.Estado</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="6" class="text-center text-muted">No hay consultas agendadas registradas.</td>
            </tr>
        }
    </tbody>
</table>