@model CapaEntidad.PerfilUsuarioDTO

@{
    ViewBag.Title = "Editar Perfil";
    var roles = new List<SelectListItem>
{
        new SelectListItem { Text = "admin", Value = "admin" },
        new SelectListItem { Text = "medico", Value = "medico" },
        new SelectListItem { Text = "paciente", Value = "paciente" }
    };
}

<h2>Editar Perfil</h2>

@using (Html.BeginForm("Editar", "Perfiles", FormMethod.Post))
{
    @Html.HiddenFor(m => m.Id)

    <div class="form-group">
        <label>Nombre</label>
        @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control", required = "required" })
    </div>

    <div class="form-group">
        <label>Correo</label>
        @Html.TextBoxFor(m => m.Correo, new { @class = "form-control", required = "required" })
    </div>

    <div class="form-group">
        <label>Teléfono</label>
        @Html.TextBoxFor(m => m.Telefono, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>Rol</label>
        @Html.DropDownListFor(m => m.Rol, roles, "Seleccione un rol", new { @class = "form-control", id = "Rol", required = "required" })
    </div>

    <!-- 👨‍⚕️ Campos médicos condicionales -->
    <div id="campos-medico" style="display:none;">
        <div class="form-group">
            <label>Especialidad</label>
            @Html.TextBoxFor(m => m.Especialidad, new { @class = "form-control" })
        </div>

        <div class="form-group">
            <label>Número de cédula</label>
            @Html.TextBoxFor(m => m.NumeroCedula, new { @class = "form-control" })
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
    <a href="@Url.Action("Index", "Perfiles")" class="btn btn-secondary">Cancelar</a>
}

<!-- 🔧 Script para mostrar/ocultar campos médicos -->
<script>function mostrarCamposMedico(valor) {
        document.getElementById("campos-medico").style.display = valor === "medico" ? "block" : "none";
    }

    document.addEventListener("DOMContentLoaded", function () {
        var rolSelect = document.getElementById("Rol");
        mostrarCamposMedico(rolSelect.value);
        rolSelect.addEventListener("change", function () {
            mostrarCamposMedico(this.value);
        });
    });</script>