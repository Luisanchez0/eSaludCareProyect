@{
    ViewBag.Title = "Registro de Usuario | eSaludCare";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <style>
        body {
            background-color: #E6F8F8;
            font-family: 'Roboto', sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            margin: 0;
            padding: 20px;
        }

        .register-container {
            background-color: white;
            padding: 40px;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            max-width: 600px;
            width: 100%;
        }

            .register-container h2 {
                color: #007b7f;
                font-size: 2rem;
                font-weight: 700;
                text-align: center;
                margin-bottom: 25px;
            }

        .form-control {
            border-radius: 8px;
            padding: 12px 15px;
            margin-bottom: 15px;
            border: 1px solid #ced4da;
            transition: border-color 0.3s ease, box-shadow 0.3s ease;
        }

            .form-control:focus {
                border-color: #00b3b0;
                box-shadow: 0 0 0 0.25rem rgba(0, 179, 176, 0.25);
            }

        .btn-register {
            background-color: #007b7f;
            color: white;
            border: none;
            padding: 12px 25px;
            font-size: 1.1rem;
            font-weight: bold;
            border-radius: 8px;
            width: 100%;
            transition: all 0.3s ease;
        }

            .btn-register:hover {
                background: linear-gradient(135deg, #007b7f, #00b3b0);
                transform: translateY(-1px);
                box-shadow: 0 6px 15px rgba(0, 123, 127, 0.5);
            }

        .links-adicionales {
            text-align: center;
            margin-top: 20px;
        }

            .links-adicionales a {
                color: #007b7f;
                text-decoration: none;
                font-weight: 600;
            }

                .links-adicionales a:hover {
                    color: #00b3b0;
                    text-decoration: underline;
                }
    </style>
</head>
<body>
    <div class="register-container">
        <h2>Registrar Usuario</h2>

        <form id="formRegistro">
            <div class="row">
                <div class="col-md-6">
                    <input type="text" id="nombre" class="form-control" placeholder="Nombre" required />
                </div>
                <div class="col-md-6">
                    <input type="text" id="apellido" class="form-control" placeholder="Apellido" required />
                </div>
            </div>

            <input type="email" id="correo" class="form-control" placeholder="Correo electrónico" required />
            <input type="password" id="contrasena" class="form-control" placeholder="Contraseña" required />
            <input type="text" id="telefono" class="form-control" placeholder="Teléfono" />

            <select id="rolSelect" class="form-control" required>
                <option value="">Seleccione un rol</option>
                <option value="medico">Médico</option>
                <option value="admin">Administrador</option>
            </select>

            <div id="extraFields"></div>

            <button type="submit" class="btn btn-register mt-3">Registrar</button>
        </form>

        <div id="mensaje" class="mt-3 text-center"></div>
    </div>

    <script>
        const rolSelect = document.getElementById("rolSelect");
        const extraFields = document.getElementById("extraFields");
        const form = document.getElementById("formRegistro");
        const mensajeDiv = document.getElementById("mensaje");

        rolSelect.addEventListener("change", () => {
            const rol = rolSelect.value;
            extraFields.innerHTML = "";

            if (rol === "medico") {
                extraFields.innerHTML = `
                            <input type="text" id="especialidad" class="form-control" placeholder="Especialidad médica" required />
                            <input type="text" id="numero_cedula" class="form-control" placeholder="Número de cédula profesional" required />
                        `;
            }
        });

        form.addEventListener("submit", async (e) => {
            e.preventDefault(); // Evita el submit tradicional

            const rol = rolSelect.value;
            const data = {
                Nombre: document.getElementById("nombre").value,
                Apellido: document.getElementById("apellido").value,
                Correo: document.getElementById("correo").value,
                Contrasena: document.getElementById("contrasena").value,
                Telefono: document.getElementById("telefono").value,
                Rol: rol,
                FechaRegistro: new Date().toISOString()
            };

            if (rol === "medico") {
                data.Especialidad = document.getElementById("especialidad").value;
                data.NumeroCedula = document.getElementById("numero_cedula").value;
            }

            try {
                const response = await fetch('/api/v1/registroAdmiMedi', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(data)
                });


                const result = await response.json();

                if (response.ok) {
                    alert(result?.mensaje || "Usuario registrado correctamente. ");
                    mensajeDiv.innerHTML = `<div class="alert alert-success">${result.mensaje}</div>`;
                    form.reset();
                    extraFields.innerHTML = "";
                } else {
                    mensajeDiv.innerHTML = `<div class="alert alert-danger">${result.message || result.mensaje}</div>`;
                }
            } catch (error) {
                mensajeDiv.innerHTML = `<div class="alert alert-danger">Error de conexión con la API.</div>`;
            }
        });
    </script>
</body>
</html>
