@model CapaEntidad.PerfilUsuarioDTO
@{
    ViewBag.Title = "Eliminar Perfil";
}

<h2>¿Estás segura de que quieres eliminar este perfil?</h2>

<div class="alert alert-danger">
    <strong>Advertencia:</strong> Esta acción no se puede deshacer.
</div>

<table class="table table-bordered">
    <tr>
        <th>Nombre</th>
        <td>@Model.Nombre</td>
    </tr>
    <tr>
        <th>Correo</th>
        <td>@Model.Correo</td>
    </tr>
    <tr>
        <th>Teléfono</th>
        <td>@Model.Telefono</td>
    </tr>
    <tr>
        <th>Rol</th>
        <td>@Model.Rol</td>
    </tr>
</table>

@using (Html.BeginForm("EliminarConfirmado", "Perfiles", FormMethod.Post))
{
    @Html.HiddenFor(m => m.Id)
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a href="@Url.Action("Index", "Perfiles")" class="btn btn-secondary">Cancelar</a>
}