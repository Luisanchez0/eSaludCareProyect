@{
    ViewBag.Title = "Bienvenida | eSaludCare";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@800&display=swap" rel="stylesheet">
    <style>
        /* Paleta de Colores: Azul y Dorado Moderno */
        :root {
            --color-azul-intenso: #1A374D; /* Azul oscuro elegante (Navy Intenso) */
            --color-dorado-vibrante: #D4AF37; /* Dorado clásico y brillante (Acento) */
            --color-azul-claro: #86BBD8; /* Azul más suave para detalles */
            --color-fondo-body: #EAF2F8; /* Azul pálido muy suave para el fondo del body */
            --color-fondo-contenido: white; /* Fondo blanco puro para la tarjeta de contenido */
            --color-texto-general: #333; /* Color de texto oscuro para legibilidad */
            --color-gris-claro: #ced4da; /* Borde de inputs */
        }

        body {
            background-color: var(--color-fondo-body); /* Fondo azul pálido */
            font-family: 'Roboto', sans-serif;
            margin: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            padding: 20px;
            box-sizing: border-box;
        }

        .welcome-container {
            display: flex;
            background-color: var(--color-fondo-contenido);
            border-radius: 15px;
            box-shadow: 0 15px 40px rgba(0, 0, 0, 0.15);
            max-width: 1200px;
            width: 100%;
            overflow: hidden;
        }

        .image-section {
            flex: 1;
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 30px;
            background-color: #F8F8F8; /* Fondo de la imagen, mantenemos un gris claro */
            position: relative;
            overflow: hidden;
            border-top-left-radius: 15px;
            border-bottom-left-radius: 15px;
        }

        .image-section img {
            max-width: 100%;
            height: auto;
            border-radius: 10px;
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
        }

        .content-section {
            flex: 1;
            padding: 50px;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: flex-start;
            text-align: left;
        }

        /* Etiqueta de Acento */
        .tagline {
            background-color: var(--color-dorado-vibrante); /* <--- DORADO */
            color: white;
            padding: 8px 18px;
            border-radius: 25px;
            display: block;
            margin: 0 auto 25px auto;
            font-size: 0.95rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            box-shadow: 0 4px 10px rgba(212, 175, 55, 0.3); /* Sombra dorada */
            max-width: fit-content;
        }

        .content-section h1 {
            color: var(--color-azul-intenso); /* <--- AZUL INTENSO */
            font-size: 3.2rem;
            font-weight: 700;
            margin-bottom: 15px;
            line-height: 1.2;
            width: 100%;
        }

        /* ESTILO MEJORADO para eSaludCare */
        .content-section h1 .brand-name {
            font-family: 'Montserrat', sans-serif;
            font-weight: 800;
            font-size: 1.1em;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.05); /* Sombra muy sutil */
            position: relative;
        }

        .content-section .lead {
            font-size: 1.4rem;
            color: var(--color-dorado-vibrante); /* <--- DORADO */
            font-weight: 500;
            margin-bottom: 30px;
        }

        .content-section p {
            color: var(--color-texto-general);
            font-size: 1.05rem;
            line-height: 1.7;
            margin-bottom: 35px;
            max-width: 550px;
        }

        /* Estilo para justificar el párrafo de acceso al panel */
        .content-section p.justificado {
            text-align: justify;
        }

        .btn-accion {
            padding: 15px 35px;
            font-size: 1.15rem;
            font-weight: bold;
            border-radius: 10px;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-block;
            margin-right: 15px;
            box-shadow: 0 6px 18px rgba(0, 0, 0, 0.15);
        }

        /* Contenedor para centrar el botón */
        .button-container {
            width: 100%;
            display: flex;
            justify-content: center;
            margin-top: 20px;
        }

        /* Ajustes de margen para el botón único */
        .button-container .btn-accion {
            margin: 0;
        }

        /* --- Estilos para el botón INICIAR SESIÓN / IR AL PANEL (Color base: AZUL INTENSO) --- */
        .btn-login, .btn-panel {
            background-color: var(--color-azul-intenso); /* <--- AZUL INTENSO */
            color: white;
            border: none;
            /* Sombra azul para el estado normal */
            box-shadow: 0 8px 20px rgba(26, 55, 77, 0.3);
        }

        /* --- Estilos HOVER (Efecto: DORADO VIBRANTE) --- */
        .btn-login:hover, .btn-panel:hover {
            background-color: var(--color-dorado-vibrante); /* <--- DORADO en hover */
            color: var(--color-azul-intenso); /* Texto en azul sobre dorado */
            transform: translateY(-2px);
            /* Sombra dorada para el estado hover */
            box-shadow: 0 12px 25px rgba(212, 175, 55, 0.4);
        }

        /* Responsive adjustments */
        media (max-width: 992px) {
            .welcome-container {
                flex-direction: column;
                max-width: 700px;
            }
            .image-section, .content-section {
                border-radius: 0;
                padding: 40px;
            }
            .image-section {
                 border-top-left-radius: 15px;
                 border-top-right-radius: 15px;
            }
            .content-section {
                align-items: center;
                text-align: center;
                border-bottom-left-radius: 15px;
                border-bottom-right-radius: 15px;
            }
            .content-section h1 {
                font-size: 2.5rem;
            }
            .content-section .lead {
                font-size: 1.2rem;
            }
            .content-section p.justificado {
                text-align: center;
            }
            .button-container {
                justify-content: center;
            }
            .button-container .btn-accion {
                width: 100%;
            }
        }
    </style>
</head>
<body>
    <div class="welcome-container">
        <div class="image-section">
            <img src="~/Imagenes/doctor-welcome.jpg" alt="Ilustración de un panel de control médico digital" class="img-fluid">
        </div>
        <div class="content-section">
            <div class="tagline">PROVEEDOR DE ATENCIÓN MÉDICA DE CONFIANZA</div>

            <h1><span class="brand-name">eSaludCare</span>: Tu Plataforma Central de Atención y Gestión</h1>

            <p class="lead">Optimizando la administración y la calidad de atención desde <strong>2005</strong>.</p>

            <p class="justificado">Accede a tu panel para <strong>optimizar la gestión administrativa</strong>, <strong>acceder a expedientes</strong> de pacientes y <strong>facilitar las consultas</strong> con total seguridad.</p>

            <div class="button-container">
                @if (Session["Token"] == null)
                {
                    <a href="/Login" class="btn-accion btn-login">INICIAR SESIÓN Y ACCEDER</a>
                }
                else
                {
                    <a href="/Home/Usuarios" class="btn-accion btn-panel">IR AL PANEL</a>
                }
            </div>
        </div>
    </div>
</body>
</html>