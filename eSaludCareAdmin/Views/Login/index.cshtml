@{
    ViewBag.Title = "Iniciar Sesión | eSaludCare";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <style>
        body {
            background-color: #E6F8F8;
            font-family: 'Roboto', sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            margin: 0;
            padding: 20px;
        }

        .login-container {
            background-color: white;
            padding: 40px;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            max-width: 450px;
            width: 100%;
            text-align: center;
        }

            .login-container h2 {
                color: #007b7f;
                font-size: 2.2rem;
                font-weight: 700;
                margin-bottom: 25px;
            }

            .login-container .form-control {
                border-radius: 8px;
                padding: 12px 15px;
                margin-bottom: 15px;
                border: 1px solid #ced4da;
                transition: border-color 0.3s ease, box-shadow 0.3s ease;
            }

                .login-container .form-control:focus {
                    border-color: #00b3b0;
                    box-shadow: 0 0 0 0.25rem rgba(0, 179, 176, 0.25);
                }

        .btn-login-main {
            background-color: #007b7f;
            color: white;
            border: none;
            padding: 12px 25px;
            font-size: 1.1rem;
            font-weight: bold;
            border-radius: 8px;
            box-shadow: 0 4px 12px rgba(0, 123, 127, 0.3);
            transition: all 0.3s ease;
            width: 100%;
            margin-top: 15px;
        }

            .btn-login-main:hover {
                background: linear-gradient(135deg, #007b7f, #00b3b0);
                transform: translateY(-1px);
                box-shadow: 0 6px 15px rgba(0, 123, 127, 0.5);
            }

        .form-check {
            text-align: left;
            margin-bottom: 20px;
            color: #495057;
        }

        .form-check-input:checked {
            background-color: #007b7f;
            border-color: #007b7f;
        }

        .links-adicionales {
            margin-top: 30px;
            font-size: 0.95rem;
        }

            .links-adicionales a {
                color: #007b7f;
                text-decoration: none;
                margin: 0 10px;
                transition: color 0.3s ease;
            }

                .links-adicionales a:hover {
                    color: #00b3b0;
                    text-decoration: underline;
                }

        .logo-login {
            max-width: 280px;
            margin-bottom: 5px;
        }
        }
    </style>
</head>
<body>
    <div class="login-container">
        <img src="~/Imagenes/eSaludCare_Logo.png" alt="Logo eSaludCare" class="logo-login" />

        <h2>¡Bienvenido!</h2>

        @using (Html.BeginForm("Index", "Login", FormMethod.Post))
        {
            <div class="mb-3">
                <input type="email" class="form-control" name="correo" placeholder="Ingrese su dirección de correo electrónico..." required />
            </div>
            <div class="mb-3">
                <input type="password" class="form-control" name="contrasena" placeholder="Contraseña" required />
            </div>
            <div class="form-check">
                <input type="checkbox" class="form-check-input" id="rememberMe" name="rememberMe" />
                <label class="form-check-label" for="rememberMe">Recuérdame</label>
            </div>
            <button type="submit" class="btn btn-login-main">Iniciar Sesión</button>

            @*  Error visual si el login falla *@
            if (ViewBag.Error != null)
            {
                <div class="alert alert-danger mt-3">@ViewBag.Error</div>
            }
        }

        <div class="links-adicionales">
            <a href="#">¿Olvidó su contraseña?</a>"
            <a href="@Url.Action("Registro","Login")">¡Crea una cuenta!</a>
        </div>
    </div>

    @section Scripts {
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
        <script>
            $(document).ready(function () {
                $("#formLogin").on("submit", function (e) {
                    e.preventDefault();

                    const datos = {
                        correo: $("#email").val(),
                        contrasena: $("#password").val()
                    };

                    $.ajax({
                        url: "/api/v1/login",
                        type: "POST",
                        data: JSON.stringify(datos),
                        contentType: "application/json; charset=utf-8",
                        success: function (response) {
                            if (response.success) {
                                // ✅ Guardar token y datos en localStorage
                                localStorage.setItem("token", response.token);
                                localStorage.setItem("idUsuario", response.id_usuario); // 👈 IMPORTANTE
                                localStorage.setItem("rol", response.role);
                                localStorage.setItem("nombre", response.nombre);

                                alert("Bienvenido, " + response.nombre);

                                // ✅ Redirigir según el rol
                                if (response.role === "admin") {
                                    window.location.href = "/Home/Index";
                                } else if (response.role === "doctor") {
                                    window.location.href = "/Home/Index";
                                } else {
                                    window.location.href = "/Home/Index";
                                }
                            } else {
                                alert("Usuario o contraseña incorrectos.");
                            }
                        },
                        error: function (xhr) {
                            if (xhr.status === 401) {
                                alert("Credenciales incorrectas. Verifica tu correo y contraseña.");
                            } else {
                                alert("Error al iniciar sesión: " + xhr.responseText);
                            }
                        }
                    });
                });
            });
        </script>
    }
</body>
</html>